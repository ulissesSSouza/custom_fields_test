<%= form_for(custom_field) do |f| %>
  <% if custom_field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(custom_field.errors.count, "error") %> prohibited this custom_field from being saved:</h2>

      <ul>
      <% custom_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label :types, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <% options = options_for_select(CustomField::TYPES.collect{|type| [type, type]}) %>
      <%= select_tag('custom_field[type]', options) %>
    </div>
    <%=f.error_span(:type) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                custom_fields_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
