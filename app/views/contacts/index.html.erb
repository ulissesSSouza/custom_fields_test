<%- model_class = Contact -%>
<div class="page-header">
  <h2>Contatos</h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <% current_user.custom_fields.collect(&:name).each do |name| %>
      <th><%= name %></th>
      <% end %>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.name %></td>
      <td><%= contact.email %></td>
      <% contact.custom_fields.collect(&:value).each do |value| %>
      <th><%= value %></th>
      <% end %>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_contact_path(contact), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        contact_path(contact),
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-xs btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="form-group">
  <div class="col-lg-10">
      <%= link_to 'Cadastrar Novo Contato', new_contact_path, :class => 'btn btn-default' %>
    </div>
</div>

